pkgrel=1
pkgdesc='Browser plugin for cloud based video conferencing service.'
arch=(x86_64)
url='http://www.bluejeans.com/'
license=(Proprietary)
groups=()
conflicts=(bjnplugin)
depends=()
makedepends=(dpkg)
source=(
    "https://swdl.bluejeans.com/skinny/bjnplugin_${pkgver}-1_amd64.deb"
)
sha256sums=('b37f57b22b4b00bb1dfae6db1fe0425ed99f8e2ab8320cb0350ec3c4d2b8ff22')
backup=('usr/lib/mozilla/plugins/.bjnplugin/config/config.xml')

package() {
    dpkg -x "bjnplugin_${pkgver}-${pkgrel}_amd64.deb" "${pkgdir}"
}
